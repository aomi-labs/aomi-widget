{
  "name": "@aomi-labs/widget-lib",
  "version": "1.0.0",
  "description": "AI-powered assistant UI widget library",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:example:live": "pnpm run build:lib -- --watch & pnpm --filter example dev",
    "build": "next build",
    "build:lib": "tsup",
    "vercel-build": "pnpm run build:lib && pnpm --filter example build",
    "start": "next start",
    "lint": "eslint .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prepublishOnly": "pnpm run build:lib"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindStylesheet": "app/globals.css"
  },
  "peerDependencies": {
    "@assistant-ui/react": "^0.11.0",
    "@assistant-ui/react-markdown": "^0.11.0",
    "@radix-ui/react-avatar": "^1.0.0",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-separator": "^1.0.0",
    "@radix-ui/react-slot": "^1.0.0",
    "@radix-ui/react-tooltip": "^1.0.0",
    "@tanstack/react-query": "^5.0.0",
    "framer-motion": "^12.0.0",
    "lucide-react": "^0.500.0",
    "motion": "^12.0.0",
    "next": ">=14.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-shiki": "^0.9.0",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "zustand": "^5.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@ai-sdk/openai": "^2.0.46",
    "@assistant-ui/react": "^0.11.28",
    "@assistant-ui/react-ai-sdk": "^1.1.5",
    "@assistant-ui/react-markdown": "^0.11.1",
    "@eslint/eslintrc": "^3",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@reown/appkit": "^1.8.14",
    "@reown/appkit-adapter-wagmi": "^1.8.14",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query": "^5.90.10",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "ai": "^5.0.65",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.545.0",
    "motion": "^12.23.22",
    "next": "15.5.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-shiki": "^0.9.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4",
    "tsup": "^8.5.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "viem": "^2.40.3",
    "wagmi": "^2.19.5",
    "zustand": "^5.0.8"
  }
}
